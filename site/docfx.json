{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "build": {
    "markdownEngineProperties": {
      "markdigExtensions": [
        "attributes",
        "customcontainers"
      ]
    },
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ]
      }
    ],
    "theme": [],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "../.site",
    "template": [
      "default",
      "modern",
      "templates/xunit"
    ],
    "globalMetadata": {
      "_appName": "xUnit.net",
      "_appTitle": "xUnit.net",
      "_appFooter": "Copyright &copy; <a href='https://dotnetfoundation.org/'>.NET Foundation</a>. Site built with <a href='https://github.com/dotnet/docfx'>DocFX</a>. Contributions welcomed at <a href='https://github.com/xunit/xunit.net'>https://github.com/xunit/xunit.net</a>.",
      "_appFaviconPath": "images/logo-128-transparent.png",
      "_disableBreadcrumb": true,
      "_disableNavbar": true,
      "_disableNextArticle": true,
      "_disableToc": false,
      "_enableNewTab": true,
      "_enableSearch": true,
      "pdf": false
    },
    "postProcessors": [
      "ExtractSearchIndex"
    ]
  }
}
