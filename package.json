{
  "scripts": {
    "browser-livereload": "browser-sync start --port 4000 --server .site --files .site --extensions html --browser false",
    "watch": "concurrently \"npm-watch build\" \"npm run browser-livereload\"",
    "build": "dotnet docfx build site/docfx.json"
  },
  "watch": {
    "build": {
      "patterns": ["**/*"],
      "extensions": "*",
      "quiet": false,
      "ignore": [".site/*"],
      "delay": 500
    }
  },
  "devDependencies": {
    "browser-sync": "^3.0.4",
    "concurrently": "^9.2.0",
    "npm-watch": "^0.13.0"
  }
}
